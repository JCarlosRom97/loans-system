{
  "name": "sistema-prestamos",
  "version": "1.0.0",
  "description": "Sistema de prestamos.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder"
  },
  "author": "JC",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "path": "^0.12.7",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.jc.sistemaprestamos",
    "productName": "MiAppElectron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns",
      "sign": false

    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
